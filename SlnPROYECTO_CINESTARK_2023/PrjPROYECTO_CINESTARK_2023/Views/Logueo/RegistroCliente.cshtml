@model PrjPROYECTO_CINESTARK_2023.Models.Usuario

@{
    ViewData["Title"] = "RegistroCliente";
}

<head>
    <link rel="stylesheet" href="~/css/styleDetallePelicula.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            justify-content: center;
            align-items: center;
            background: rgb(221, 221, 221);
        }

        .contenedorgeneral {
            margin: 50px 0 0 0;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .contenedor {
            max-width: 700px;
            width: 100%;
            background: white;
            padding: 25px 30px;
            border-radius: 15px;
            border-left: 5px solid #fa0000;
            border-bottom: 5px solid #fa0000;
        }

            .contenedor .title {
                font-size: 25px;
                font-weight: bold;
                position: relative;
            }

                .contenedor .title::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -5px;
                    height: 4px;
                    width: 90px;
                    background: rgb(172, 0, 0);
                }

            .contenedor form .user-details {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                margin: 20px 0 12px 0;
            }

        form .user-details .input-box {
            margin-bottom: 15px;
            width: calc(100% / 2 - 20px);
        }

        .user-details .input-box .details {
            display: block;
            font-weight: 500;
            margin-bottom: 5px;
            font-size: 20px;
        }

        .user-details .input-box .cajas {
            height: 45px;
            width: 100%;
            outline: none;
            border-radius: 5px;
            border: 1px solid #ccc;
            padding-left: 15px;
            font-size: 16px;
            border-bottom-width: 2px;
            transition: all 0.3s ease;
        }

            .user-details .input-box .cajas:focus,
            .user-details .input-box .cajas:valid {
                border-color: #0d1f40;
            }

        form .gender-details .gender-title {
            font-size: 20px;
            font-weight: 500;
        }

        form .gender-details .category {
            display: flex;
            width: 80%;
            margin: 14px 0;
            justify-content: space-between;
        }

        .gender-details .category label {
            display: flex;
            align-items: center;
        }

        .gender-details .category .dot {
            height: 18px;
            width: 18px;
            background: #d9d9d9;
            border-radius: 50%;
            margin-left: 20px;
            margin-right: 5px;
            border: 5px solid transparent;
            transition: all 0.3s ease;
        }

        #dot-1:checked ~ .category label .one,
        #dot-2:checked ~ .category label .two {
            border-color: #d9d9d9;
            background: #0d1f40;
        }

        form input[type="radio"] {
            display: none;
        }

        .buttons {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .btn-login {
            width: 200px !important;
            height: 40px !important;
            font-size: 20px;
            background-color: #0d1f40;
            color: white;
            border-radius: 10px;
            border: none;
            width: 150px;
            transition: background-color 0.3s ease;
            margin: 2.5px;
        }

            .btn-login:focus {
                outline: none;
            }

            .btn-login:hover,
            .btn-login:focus {
                cursor: pointer;
                background-color: #11367c;
            }

        .btn-register {
            position: relative;
            display: inline-block;
            font-weight: bold;
            font-size: 13pt;
            color: #0d1f40;
        }

            .btn-register::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -2px;
                width: 100%;
                height: 2px;
                background-color: rgb(115, 0, 0);
                transform: scaleX(0);
                transform-origin: left;
                transition: transform 0.3s ease-in-out;
            }

            .btn-register:hover {
                text-decoration: none;
                color: #11367c;
            }

                .btn-register:hover::after {
                    transform: scaleX(1);
                    transform-origin: left;
                }

        .error {
            color: red;
        }

        select {
            width: 100%;
        }
    </style>



</head>


<body>
    <header style="background-color: #0d1f40; color: white; padding: 20px; height:69px; width: 100%;">
        <h1 style="font-size: 24px; font-weight: bold; margin-left: 100px;">!Bienvenido a CineBot!</h1>
    </header>
    <div class="contenedorgeneral">
        <div class="contenedor">
            <div class="title">Únete a CineBot</div>
            <form asp-action="RegistroCliente">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Nombres :</span>
                        <input asp-for="nomUsu" class="cajas" required placeholder="Ingrese sus nombres" />
                        <span class="error" id="nomError"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Apellido :</span>
                        <input asp-for="apeUsu" class="cajas" required placeholder="Ingrese sus apellidos" />
                        <span class="error" id="apeError"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Correo :</span>
                        <input asp-for="email" class="cajas" required placeholder="Ingrese su correo" />
                        <span class="error" id="emailError"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Contraseña :</span>
                        <input asp-for="contra" class="cajas" required placeholder="Ingrese su contraseña" type="password" />
                        <span class="error" id="contraError"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">DNI :</span>
                        <input asp-for="nroDoc" class="cajas" required placeholder="Ingrese su DNI" />
                        <span class="error" id="docError"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Fecha de Nacimiento :</span>
                        <input asp-for="fecNac" class="cajas" type="date" required />
                    </div>
                    <div class="input-box">
                        <span class="details">Celular :</span>
                        <input asp-for="celular" class="cajas" required placeholder="Ingrese su celular" />
                        <span class="error" id="celularError"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Departamento :</span>
                        @Html.DropDownList("dpto", ViewBag.dptos as SelectList, new { @class = "select2 form-control depto form-select", id = "dpto" })
                    </div>
                    <div class="input-box">
                        <span class="details">Provincia :</span>
                        <select id="prov" class="select2 form-control prov">
                            <option value="[Seleccione Provincia]">[Seleccione Provincia]</option>
                        </select>
                    </div>
                    <div class="input-box">
                        <span class="details">Distrito :</span>
                        <select id="idUbigeo" name="idUbigeo" class="select2 form-control dist">
                            <option value="[Seleccione Distrito]">[Seleccione Distrito]</option>
                        </select>
                    </div>
                    <div class="gender-details">
                        <input asp-for="idSexo" class="form-control" id="dot-1" value="1" type="radio" />
                        <input asp-for="idSexo" class="form-control" id="dot-2" value="2" type="radio" />
                        <span class="gender-title">Sexo :</span>
                        <div class="category">
                            <label for="dot-1">
                                <span class="dot one"></span>
                                <span class="gender">Masculino</span>
                            </label>
                            <label for="dot-2">
                                <span class="dot two"></span>
                                <span class="gender">Femenino</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button id="btnlogin" type="submit" class="btn-login">Registrarme</button>
                </div>
            </form>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/validacion.js"></script>
    <script>
        $(document).ready(function () {
            // Manejar el evento change del primer select
            $('#dpto').change(function () {
                var dptoSelected = $(this).val();

                // Realizar una llamada AJAX para obtener los datos correspondientes
                $.ajax({
                    url: '/Logueo/CboProvincias', // Reemplaza 'Controller' y 'Action' con los nombres correctos en tu proyecto
                    type: 'GET',
                    data: { dpto: dptoSelected }, // Enviar el valor seleccionado al controlador
                    success: function (data) {
                        // Limpiar el segundo select
                        $('#prov').empty();
                        $('#idUbigeo').empty();
                        $('#idUbigeo').append($('<option></option>').val("[Seleccione Distrito]").text("[Seleccione Distrito]"));

                        // Agregar las opciones al segundo select
                        $.each(data, function (index, option) {
                            $('#prov').append($('<option></option>').val(option.value).text(option.text));
                        });
                    }
                });
            });

            $('#prov').change(function () {
                var provSelected = $(this).val();

                // Realizar una llamada AJAX para obtener los datos correspondientes
                $.ajax({
                    url: '/Logueo/CboDistritos', // Reemplaza 'Controller' y 'Action' con los nombres correctos en tu proyecto
                    type: 'GET',
                    data: { prov: provSelected }, // Enviar el valor seleccionado al controlador
                    success: function (data) {
                        // Limpiar el segundo select
                        $('#idUbigeo').empty();

                        // Agregar las opciones al segundo select
                        $.each(data, function (index, option) {
                            $('#idUbigeo').append($('<option></option>').val(option.value).text(option.text));
                        });
                    }
                });
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
            crossorigin="anonymous"></script>   

</body>
