
@{
    ViewData["Title"] = "InicioSesion";
}

@{
    Layout = null;
}

<head>
    <title>Inicia Sesión</title>
    <link rel="stylesheet" href="~/css/styleDetallePelicula.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            background: rgb(221, 221, 221);
        }

        .contenedorgeneral {
            margin: 50px 0 0 0;
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .contenedor {
            max-width: 700px;
            width: 100%;
            background: white;
            padding: 25px 30px;
            border-radius: 15px;
            border-left: 5px solid #fa0000;
            border-bottom: 5px solid #fa0000;
        }

        .title-login {
            position: relative;
        }

            .title-login:before {
                content: '';
                position: absolute;
                left: 0;
                bottom: -8px;
                height: 4px;
                width: 100px;
                background: #fa0000;
            }

        .user-details {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin: 20px 0 12px 0;
        }

        .input-box {
            margin-bottom: 15px;
            width: calc(100% / 2 - 20px);
        }

        .details {
            display: block;
            font-weight: 500;
            margin-bottom: 5px;
        }

        .inputs {
            height: 45px;
            width: 100%;
            outline: none;
            border-radius: 5px;
            border: 1px solid #ccc;
            padding-left: 15px;
            font-size: 16px;
            border-bottom-width: 2px;
            transition: all 0.3s ease;
        }

            .inputs:focus,
            .inputs:valid {
                border-color: #0d1f40;
            }

        .buttons {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .btn-login {
            width: 200px !important;
            height: 40px !important;
            font-size: 20px;
            background-color: #0d1f40;
            color: white;
            border-radius: 10px;
            border: none;
            width: 150px;
            transition: background-color 0.3s ease;
            margin: 2.5px;
        }

            .btn-login:focus {
                outline: none;
            }

            .btn-login:hover,
            .btn-login:focus {
                cursor: pointer;
                background-color: #11367c;
            }

        .btn-register {
            position: relative;
            display: inline-block;
            font-weight: bold;
            font-size: 13pt;
            color: #0d1f40;
        }

            .btn-register::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -2px;
                width: 100%;
                height: 2px;
                background-color: #fa0000;
                transform: scaleX(0);
                transform-origin: left;
                transition: transform 0.3s ease-in-out;
            }

            .btn-register:hover {
                text-decoration: none;
                color: #11367c;
            }

                .btn-register:hover::after {
                    transform: scaleX(1);
                    transform-origin: left;
                }

        .error {
            color: red;
        }</style>
</head>

<body>
    <header style="background-color: #0d1f40; color: white; padding: 20px; width: 100%;">
        <h1 style="font-size: 24px; font-weight: bold; margin-left: 100px;">!Bienvenido a CineBot!</h1>

    </header>
    <div class="contenedorgeneral">
        <div class="contenedor">
            @if (TempData["Mensaje"] != null)
            {
                <h2 class="title-login">@TempData["Mensaje"]</h2>
            }
            else
            {
                <h2 class="title-login">¡Bienvenido a CineBot!</h2>
            }
            <form action="/Logueo/InicioSesion" method="post">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Correo:</span>
                        <input name="email" id="correo" class="inputs" type="text" placeholder="Ingrese su Correo" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Contraseña:</span>
                        <input name="password" id="password" class="inputs" type="password" placeholder="Ingrese su Contraseña"
                               required>
                    </div>
                    @if (ViewBag.msjError != null)
                    {
                        <span class="error">@ViewBag.msjError</span>
                    }
                </div>
                <div class="buttons">
                    <button id="btnlogin" type="submit" class="btn-login">Iniciar sesión</button>
                    <a class="btn-register" href="/Logueo/RegistroCliente">¿No tienes una cuenta? Regístrate.</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>



