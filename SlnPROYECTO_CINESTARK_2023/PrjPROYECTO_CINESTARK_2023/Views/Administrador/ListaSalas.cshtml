@model IEnumerable<PrjPROYECTO_CINESTARK_2023.Models.Sala>

@{
    ViewData["Title"] = "ListaSalas";
}

<h1>Lista de Salas</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-dark">Nuevo</a>
</p>
<div class="table-responsive">
<table class="table border-bottom border-start border-end border-dark table-hover align-middle">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.nomCine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.capacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descFormato)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomCine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.capacidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descFormato)
            </td>
            <td class="col-3">
                @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }, new {@class="btn btn-success"}) |
                @Html.ActionLink("Detalle", "Details", new { /* id=item.PrimaryKey */ }, new {@class="btn btn-primary"}) |
                @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ }, new {@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
</div>
